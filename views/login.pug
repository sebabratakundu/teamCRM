div.modal.fade#login_modal
  div.modal-dialog.modal-lg.modal-dialog-centered
    div.modal-content
      div.modal-body
        div.row.p-3
          div.col-md-6.d-flex.justify-content-center.align-items-center
            img(src="images/signup.svg" alt="signup" width="100%")
          div.col-md-6
            h3.display-5.m-0.font-weight-bold Login
            hr.w-25.float-left.pt-1.bg-primary.rounded-lg.mb-4
            br
            ul.d-none.error-msg-box 
              li.error-msg.text-danger
            form.login-form
              div.form-group.mb-4 
                input(type="email" name="username" placeholder="Type your email here" required).form-control.py-4 
              div.form-group.mb-4 
                input(type="password" name="login_password" placeholder="Type your password here" required).form-control.py-4
              div.from-group.mb-4
                .custom-control.custom-radio.custom-control-inline
                  input#admin.custom-control-input(type='radio' name='role' value='admin')
                  label.custom-control-label(for='admin') Admin
                .custom-control.custom-radio.custom-control-inline
                  input#client.custom-control-input(type='radio' name='role' value='client')
                  label.custom-control-label(for='client') Client
                .custom-control.custom-radio.custom-control-inline
                  input#team.custom-control-input(type='radio' name='role' value='team')
                  label.custom-control-label(for='team') Team
              div.form-group.mb-4 
                button(style="background:#377dff;" disabled).btn.btn-block.text-white.font-weight-bold.py-2.login_btn Login
                button(style="background:#377dff;" disabled).btn.btn-block.text-white.font-weight-bold.py-2.d-none.login_loading_btn
                  span.spinner-border.spinner-border-sm.mr-2
                  span Please Wait...
            p New User? 
              a(href="#")#signup_request_btn Create an account 